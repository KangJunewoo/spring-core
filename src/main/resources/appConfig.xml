<?xml version="1.0" encoding="UTF-8"?>
<!--AppConfig 대신에 XML을 쓰고 싶다면 아래와 같이 하면 되더라~-->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="memberService" class="com.medium.junewookang.core.member.MemberServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository"/>
    </bean>

    <bean id="memberRepository" class="com.medium.junewookang.core.member.MemoryMemberRepository"/>

    <bean id="orderService" class="com.medium.junewookang.core.order.OrderServiceImpl">
        <constructor-arg name="memberRepository" ref="memberRepository"/>
        <constructor-arg name="discountPolicy" ref="discountPolicy"/>
    </bean>

    <bean id="discountPolicy" class="com.medium.junewookang.core.discount.RateDiscountPolicy"/>
</beans>